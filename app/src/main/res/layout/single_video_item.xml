<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_video_number_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_video_trailer_label"
        app:layout_constraintStart_toEndOf="@+id/tv_video_trailer_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_video_trailer_label"
        tools:text="1" />

    <TextView
        android:id="@+id/tv_video_trailer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/video_trailer_play_label"
        app:layout_constraintBottom_toTopOf="@+id/ib_video_trailer_play_button"
        app:layout_constraintStart_toEndOf="@+id/ib_video_trailer_play_button"
        app:layout_constraintTop_toBottomOf="@+id/ib_video_trailer_play_button" />

    <ImageButton
        android:id="@+id/ib_video_trailer_play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/video_play_image_button_content_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_play_arrow_black_48dp" />
</android.support.constraint.ConstraintLayout>